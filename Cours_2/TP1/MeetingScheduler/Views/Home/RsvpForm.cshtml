@model MeetingScheduler.Models.GuestResponse
@{
	Layout = null;
}

<!DOCTYPE html>
<html>
	<head>
		<meta name="viewport" content="width=device-width" />
		<title>RsvpForm</title>
		<link rel="stylesheet" href="/css/style.css" />
	</head>
	<body>
		<div class="encadre marges">RSVP</div>
		<form class="marges" asp-action="RsvpForm" method="post">
			<div asp-validation-summary="All"></div>
			<div>
				<label asp-for="Nom">Nom:</label>
				<input asp-for="Nom" />
			</div>
			<div>
				<label asp-for="Email">E-mail:</label>
				<input asp-for="Email" />
			</div>
			<div>
				<label asp-for="Telephone">Téléphone:</label>
				<input asp-for="Telephone" />
			</div>
			<div>
				<label asp-for="Participera">Allez-vous participer?</label>
				<select asp-for="Participera">
					<option value="">Choisissez une option</option>
					<option value="true">Oui, Je viens</option>
					<option value="false">Non, Je ne viens pas</option>
				</select>
			</div>
			<br />
			<button class="lien" type="submit">Envoyer RSVP</button>
		</form>
	</body>
</html>
